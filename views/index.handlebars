<div class="jumbotron">
    <h1>Let's add a drink!</h1>
	<form method="post" action="/">
	    <div class="form-group">
	        <label for="drink">Drink</label>
	        <select type="text" class="form-control to-center" name="drink" id="drink" placeholder="Drink">
	          	<option>Water</option>
			    <option>Tea</option>
			    <option>Coffee</option>
			    <option>Milk</option>
			    <option>Soda</option>
			    <option>Juice</option>
			    <option>Beer</option>
			    <option>Wine</option>
			    <option>Strong alcohol</option>
			    <option>Energy drink</option>
			    <option>Jogurt</option>
			    <option>Smoothy</option>
			    <option>Cacao</option>
			    <option>Kefir</option>
			    <option>Soup</option>
			    <option>Limo</option>
			    <option>Other</option>
	        </select>
	    </div>
	    <div class="form-group">
	        <label for="amount">Amount (ml.)</label>
			<select type="text" class="form-control to-center" name="amount" id="amount" placeholder="amount">
	          	<option>30</option>
			    <option>50</option>
			    <option>100</option>
			    <option>150</option>
			    <option>200</option>
			    <option>250</option>
			    <option>300</option>
			    <option>330</option>
			    <option>400</option>
			    <option>500</option>
			    <option>600</option>
			    <option>800</option>
			    <option>1000</option>
	        </select>
	    </div>
	    <button type="submit" class="btn btn-primary btn-lg">Drink!</button>
	</form>
</div>

<h2>Today's water</h2>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
    60%
  </div>
</div>